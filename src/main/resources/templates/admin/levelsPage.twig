            </nav>
        </div>
    </header>

    <section id="Field">
        <div class="content1">
            <h2>
                <table id="levels-table">
                    <thead>
                        <tr>
                            <th>name</th>
                            <th>range</th>
                            <th> </th>

                        </tr>
                    </thead>
                    {% for level in levels%}
                    <tr>
                        <td>{{level.getName}}</td>
                        <td>{{level.getMaxValue}}</td>
                        <td><input type="button" onclick="alert('changed')" value="change">
                            <input type="button" onclick="alert('deleted')" value="delete">
                        </td>
                    </tr>
                    {% endfor %}

                </table>
            </h2>
        </div>

        <div class="add-new-level">
            <form>
                <label for="name">Enter new level's name </label>
                <input type="text" name="name" id="level-name" value="new level name">
                <label for="range">Enter new level's range </label>
                <input type="text" name="range" id="level-range" value="new level range">
                <input type="button" onclick="alert('added')" value="Add">
            </form>
        </div>
    </section>




