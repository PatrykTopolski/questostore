<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" type="image/png" href="../../recourses/codecoolThumbnail.png">
    <title>Quest Store</title>
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/items.css">
    <link rel="stylesheet" href="/static/css/itemsMentorView.css">
</head>


<body>
    <!-- HEADER -->
    <header>
        <div class="content">
            <h1></h1>
            <nav>
                <ul id="navToolBar">
                    <li><img src="/static/recourses/codecoolLogoprecel.png"></li>
                    <li><a href="/mentor">Profile</a></li>
                    <li><a href="/mentor/store">Store</a></li>
                    <li><a href="/mentor/quests">Quests</a></li>
                    <li><a href="/mentor/students">Students</a></li>
                    <li style="float:right"> <a href="/login">log out</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- SECTIONS -->


    <section class="items">
        <div class="container">
            <h2>Artifacts</h2>
            <div class="row">
                <div class="col-12">
                    <p><button class="createButton" onclick="location.href='/mentor/addArtifact'" type="button">Create new</button></p>
                </div>
               {% for artifact in artifactList %}
                <div class="col-12 col-md-6 col-lg-4">
                    <div class=item id="item-1">
                        <div class="item-header">{{ artifact.name }}
                            <div class="price">
                                <span class="coin wrapper">
                                        <!--img src="/coin icon here" /-->                                        
                                        <span class="coin">{{ artifact.price }}</span>
                                </span>
                            </div>
                        </div>
                        <img src="/static/recourses/winner.svg" class="img-fluid" alt="winner">
                        <div class="item-description">
                             {{ artifact.description }}
                        </div>

                        <div class="item-tools">
                            <p>Remove</p>
                            <a href='/mentor/editArtifact/{{artifact.id}}'><p>Update</p></a>

                        </div>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </section>

    <!-- FOOTER -->
    <footer>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="../../js/bootstrap.bundle.min.js"></script>
</body>

</html>