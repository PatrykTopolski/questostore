    <form method="POST">
    <div class="createUpdateForm">
            <div class="flexItem">
                <p class="flexTxt">Write name</p>
                <input type="text" name="name" placeholder="name">
            </div>
            <div class="flexItem">
                <p>Write surname</p>
                <input type="text" name="surname" placeholder="Surname">
            </div>
            <div class="flexItem">
                <p>Write login</p>
                <input type="text" name="login" placeholder="Login">
            </div>
            <div class="flexItem">
                <p>Write password</p>
                <input type="text" name="password" placeholder="Password">
            </div>
            <div class="flexItem">
                <p>Write email</p>
                <input type="text" name="email" placeholder="Email">
            </div>
            <div class="flexItem">
                <p>Write adress</p>
                <input type="text" name="adress" placeholder="Adress">
            </div>
            <div class="flexItem">
                <p>Write phone</p>
                <input type="text" name="phone" placeholder="Phone">



            <div class="flexItem">
                <p>Select student's level</p>
                <select id="levelSelect" name="levels">
                    <option selected value="easy">Begginer</option>
                    <option value="medium">Medium</option>
